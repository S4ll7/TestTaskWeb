<h1>@Model.ProductCategory</h1>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @{
        if (Model.AllProducts != null)
        {
            foreach (var product in Model.AllProducts)
            {
            <div class="col">
                <div class="card shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                        <title>Placeholder</title>
                        <img class="img-thumbnail" src="@product.Image" alt="@product.Name">
                        <rect width="100%" height="100%" fill="#55595c"></rect>
                    </svg>
                    <div class="card-body">
                        <p class="card-text">@product.ShortDescription</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/Product/ShowProductInfo/@product.id" class="button">View</a>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                }
            }
        }
